generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model foods {
  id String   @db.VarChar(100) @unique
  food_name String   @db.VarChar(100)
  price Int   
  photo String @db.VarChar(255)
}

model transactions {
  id String   @db.VarChar(100) @unique
  customer_money Int
  total_price Int   
  rest_money Int

  food_cart food_cart[]
}


model food_cart {
  id String @db.VarChar(100) @unique
  id_transaction String
  transaction transactions @relation(fields: [id_transaction], references: [id], onDelete: Cascade)
  quantity Int
  price Int
} 
